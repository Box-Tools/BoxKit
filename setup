#!/bin/bash


#Development mode
if [ $1 = "develop" ]; then
    cd bubblebox/cbox/source && make && cd ../../../
    python3 setup.py develop --user
fi


#Install mode
if [ $1 = "install" ]; then
    python3 setup.py build
    python3 setup.py install --user
fi


# Publish mode
if [ $1 = "publish" ]; then
    python3 setup.py sdist
    twine upload dist/*
fi


#Clean after installation
if [ $1 = "clean" ]; then
    rm -rf *.egg-info
    rm -rf build dist
    cd bubblebox/cbox/source && make clean && cd ../../../
fi
